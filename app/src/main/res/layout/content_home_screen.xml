<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.thisnamesucks.academicplanner.HomeScreenActivity"
    tools:showIn="@layout/activity_home_screen"
    style="@android:style/Animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.5dp"
    android:columnCount="1"
    android:rowCount="6">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_rowWeight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homescreen_img"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowWeight="0"
        android:layout_rowSpan="1"
        android:layout_gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="3"
        android:layout_rowWeight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Info"
        android:id="@+id/button"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="0"
        android:layout_rowSpan="1" />

    <Button
        android:id="@+id/semesters_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Semesters"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_rowWeight="0"
        android:layout_rowSpan="1" />

</GridLayout>
