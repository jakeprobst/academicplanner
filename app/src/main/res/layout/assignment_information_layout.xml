<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/assignment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/assignment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignment_name"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/assignment_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/assignment_total_score"
        android:layout_toLeftOf="@+id/score_slash"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/score_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_alignTop="@+id/assignment_total_score"
        android:layout_toLeftOf="@+id/assignment_total_score"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/assignment_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignment_name"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/assignment_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/score_slash"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        />

</RelativeLayout>
