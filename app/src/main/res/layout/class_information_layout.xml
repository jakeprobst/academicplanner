<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/class_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_name"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/class_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/class_total_score"
        android:layout_toLeftOf="@+id/score_slash"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/score_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_alignTop="@+id/class_total_score"
        android:layout_toLeftOf="@+id/class_total_score"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/class_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_name"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        />
</RelativeLayout>
