<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="48dp"
    tools:showIn="@layout/activity_rubric"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.thisnamesucks.academicplanner.RubricActivity"
    android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp">

        <ListView
            android:id="@+id/rubric_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:divider="@android:color/transparent"
            android:dividerHeight="4dp" />

        <ImageButton
            android:id="@+id/new_rubric_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/textPrimaryColor"
            android:layout_gravity="right"
            android:layout_below="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:tintMode="multiply"
            android:background="@drawable/rubric_button"
            android:hapticFeedbackEnabled="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</RelativeLayout>