<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item >
                <shape>
                    <solid android:color="#77000000"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="4px" android:right="2px">
                <shape>
                    <solid android:color="@color/colorRowBackground"/>
                    <stroke android:width="1dp">#55000000</stroke>
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp"/>
                    <margin
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#AA000000"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="2px" android:right="1px">
                <shape>
                    <solid android:color="@color/colorRowBackground"/>
                    <stroke android:width="1dp">#55000000</stroke>
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="1dp"
                        android:bottom="1dp"/>
                    <margin
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>